{
  "name": "@pillar-ai/sdk",
  "version": "0.1.3",
  "description": "Pillar Embedded Help SDK - Add contextual help and AI chat to your application",
  "type": "module",
  "main": "./dist/pillar.esm.js",
  "module": "./dist/pillar.esm.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pillar-sync": "./src/cli/sync.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/pillar.esm.js",
      "default": "./dist/pillar.esm.js"
    }
  },
  "files": [
    "dist/pillar.esm.js",
    "dist/**/*.d.ts",
    "src/cli",
    "src/actions/types.ts",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "rollup -c -w",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "help",
    "documentation",
    "support",
    "chat",
    "ai",
    "embedded"
  ],
  "author": "Pillar Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pillarhq/sdk",
    "directory": "packages/sdk"
  },
  "homepage": "https://trypillar.com",
  "bugs": {
    "url": "https://github.com/pillarhq/sdk/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@preact/signals": "^1.3.1",
    "marked": "^17.0.1",
    "preact": "^10.25.4",
    "preact-iso": "^2.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.0",
    "rollup": "^4.9.0",
    "tslib": "^2.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "sideEffects": false
}
